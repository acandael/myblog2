<% wrap_layout :layout do %>
  <div id="blog">
    <article class="blogpost">
      <footer>
        <time datetime="<%= current_article.date %>"><%= current_article.date.strftime('%b %e %Y') %> by Anthony Candaele</time>      
        <span class="social"><i class="fa fa-twitter-square"></i>
<a href="https://twitter.com/share" data-via="acandael" data-count="none" data-dnt="true">Tweet</a>
        </span>
    </footer>
    <header>
      <h1><%= current_article.title %></h1>
    </header>
    <div class="line">&nbsp;</div>
      <div class="bodytext">
        <%= yield %>
      </div>
    </article>
  </div>
<% end %> 

<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>

